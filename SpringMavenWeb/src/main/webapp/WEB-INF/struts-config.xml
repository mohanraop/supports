<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
 
<struts-config>
	<form-beans>
		<form-bean name="helloForm" type="com.spring.actionForm.HelloWorldForm"></form-bean>		
	</form-beans>
	<action-mappings>
		<action path="/hello" type="com.spring.action.HelloWorldAction" name="helloForm">
			<forward name="hello" path="/Hello.jsp"></forward>
		</action>
	</action-mappings>
</struts-config>

